{
  "displayName": "client",
  "rootDir": ".",
  "moduleDirectories": [
    "node_modules/",
    "src/"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx"
  ],
  "moduleNameMapper": {
    "^uuid$": "uuid"
  },
  "testRegex": ".*\\.(e2e-)?spec\\.tsx$",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ],
  "coverageDirectory": "coverage/",
  "testEnvironment": "node",
  "setupFiles": [
    "dotenv/config"
  ],
  "verbose": true
}